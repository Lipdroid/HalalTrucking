<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.halaltrucking.AddMarkerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:gravity="center"
            android:text="Marker Details"
            android:textSize="80px"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ln_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="map"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="40px"
                android:text="Location:32/A jump Street"
                android:textSize="50px" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40px"
                android:text="Date:14/13/2016"
                android:textColor="@color/common_red_txt"
                android:textSize="50px" />


        </LinearLayout>

        <ImageView
            android:id="@+id/image_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50px" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60px"
            android:paddingLeft="40px"
            android:text="ArtType"
            android:textSize="50px" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:paddingLeft="40px"
            android:singleLine="true"
            android:text="title"
            android:textSize="80px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:paddingLeft="40px"
            android:text="description"
            android:textSize="50px" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="GET DIRECTION ON MAP"
        android:textStyle="bold" />
</RelativeLayout>
